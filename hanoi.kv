#:kivy 2.0.0

<Controller>:
    towers_object: towers
    Towers:
        id: towers

    BoxLayout:
        orientation: 'vertical'
        size_hint: (0.3, 1)
        spacing: 50
        padding: 10

        Label:
            halign: 'left'
            font_size: 20
            text: 'Move Count: ' + str(root.move_count)

        BoxLayout:
            spacing: 0
            padding: 10
            Button:
                text: "-"
                size_hint_x: 0.2
                font_size: 30
                on_press: if root.disc_count > 1: root.disc_count-=1
            Label:
                text: str(root.disc_count)
                size_hint_x: 0.2
                font_size: 30
            Button:
                text: "+"
                size_hint_x: 0.2
                font_size: 30
                on_press: if root.disc_count < 20: root.disc_count+=1

        BoxLayout:
            orientation: 'vertical'
            spacing: 0
            Label:
                text: "Autocomplete mode:"
            BoxLayout:
                spacing: 0
                padding: 0
                size_hint: 1, 1
                ToggleButton:
                    text:'Unicolor'
                    group:'modes'
                    id: mode_toggle_uni
                    state:'down'
                    on_press: root.mode = self.text.lower(); mode_toggle_bi.state = 'down' if self.state=='normal' else 'normal'
                ToggleButton:
                    text:'Bicolor'
                    group:'modes'
                    id: mode_toggle_bi
                    on_press: root.mode = self.text.lower(); mode_toggle_uni.state = 'down' if self.state=='normal' else 'normal'

        Button:
            text: 'Restart'
            on_press: root.reset()
        Button:
            text: 'Autocomplete'
            on_press: root.complete()
        Button:
            text: 'Stop autocomplete'
            on_press: root.stop_complete()

